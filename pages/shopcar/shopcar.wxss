.container-shopcar {
  margin-bottom: 3rem;
}

/* 门店：头部 */

.classes-line {
  width: 100%;
  height: 0.41rem;
}

.classes-header {
  width: 100%;
  height: 1.72rem;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  background-color: white;
}

.classes-header-left {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
}

.img-check {
  width: 0.75rem;
  height: 0.75rem;
}

.classes-header-left .txt-title {
  font-size: 0.69rem;
  color: #333;
  margin-left: 0.44rem;
}

.classes-header-left .img-arrow {
  width: 0.31rem;
  height: 0.5rem;
  margin-left: 0.72rem;
}

.classes-header-right {
  width: 20%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.classes-header-right .coupon {
  width: 1.41rem;
  height: 0.75rem;
  line-height: 0.75rem;
  text-align: center;
  font-size: 0.44rem;
  color: white;
  background-color: red;
}

/* 门店：商品*/

.classes-main {
  align-items: center;
  background-color: #fdfdfd;
}

.classes-item {
  width: 100%;
  height: 4.5rem;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 0.53rem;
  padding-bottom: 0.63rem;
}

.classes-item-left {
  width: 80%;
  height: 100%;
  display: flex;
  align-items: center;
}

.classes-item-left .thumbnail {
  width: 3.34rem;
  height: 3.34rem;
  margin-left: 0.59rem;
  background-color: red;
}

.classes-item-left .description {
  width: 10.06rem;
  height: 100%;
  justify-content: space-between;
  margin-left: 0.59rem;
  background-color: #fdfdfd;
}

.classes-item-left .description .title {
  font-size: 0.63rem;
}

.classes-item-left .description .txt-descrip {
  font-size: 0.63rem;
  color: #999;
}

.classes-item-left .description .num {
  height: 1.16rem;
}

.classes-item-left .description .decrease, .increase {
  width: 1.16rem;
  height: 100%;
  text-align: center;
  background-color: #f7f7f7;
  color: #333;
  font-size: 0.75rem;
}

.classes-item-left .description .number {
  width: 1.69rem;
  height: 100%;
  line-height: 1.16rem;
  margin-left: 0.03rem;
  margin-right: 0.03rem;
  text-align: center;
  font-size: 0.69rem;
  background-color: #f7f7f7;
  color: #ff2150;
}

/*门店：商品 right */

.classes-item-right {
  width: 20%;
  height: 100%;
  justify-content: space-between;
  background-color: #fdfdfd;
}

.classes-item-right .top {
  display: flex;
  justify-content: flex-end;
  background-color: #fdfdfd;
}

.classes-item-right .bottom {
  display: flex;
  justify-content: flex-end;
}

.classes-item-right .pre-price {
  font-size: 0.6rem;
  color: #999;
  margin-top: 0.25rem;
  text-align: right;
}

.classes-item-right .now-price {
  font-size: 0.75rem;
  color: #ff2150;
  text-align: right;
}

.classes-item-right .delete {
  width: 0.72rem;
  height: 0.75rem;
}

/*门店分割线 */

.item-line {
  width: calc(100% - 0.63*2rem);
  height: 0.03rem;
  background-color: #ddd;
}

/* 底部 合算 */

.account {
  width: 100%;
  height: 2.22rem;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  left: 0;
  bottom: 0;
  border-top: 0.03rem solid #ddd;
  background-color: white;
}

.acount-left {
  flex-grow: 1;
  height: 100%;
  display: flex;
  align-items: center;
}

.txt-choice {
  color: #333;
  font-size: 0.75rem;
  margin-left: 0.44rem;
  margin-right: 0.59rem;
}

.txt-total {
  color: #ff2150;
  font-size: 0.56rem;
}

.txt-money {
  color: #ff2150;
  font-size: 0.75rem;
  margin-right: 0.53rem;
}

.txt-save {
  color: #999;
  font-size: 0.56rem;
}

.acount-right {
  width: 5rem;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ff2150;
}

.txt-clear {
  font-size: 0.75rem;
  color: white;
}
